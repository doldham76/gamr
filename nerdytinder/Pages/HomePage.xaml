<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="nerdytinder.HomePage">
  <StackLayout>
    <Label x:Name="welcome" Text="{Binding Person.Name, StringFormat='Welcome \{0\}'}" HorizontalOptions="Center" />
    <Button x:Name="findNerds" Text="Find Gamers" HorizontalOptions="Center" WidthRequest="250" HeightRequest="150" />
    <Button x:Name="findGames" Text="Find Games" HorizontalOptions="Center" WidthRequest="250" HeightRequest="150" />
    <Button x:Name="findStores" Text="Find Stores" HorizontalOptions="Center" WidthRequest="250" HeightRequest="150" />
  </StackLayout>
</ContentPage>