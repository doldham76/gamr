<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="nerdytinder.WelcomePage">
	<ContentPage.Content>
		<StackLayout>
            <Label Text="Welcome to GAMr" HorizontalTextAlignment="Center" FontSize="40"/>
            <Label Text="Find Games and other Gamers nearby!" HorizontalTextAlignment="Center" FontSize="20"/>
            <BoxView HorizontalOptions="FillAndExpand" HeightRequest="100" VerticalOptions="Start" />
            <Button x:Name="gbutton" Text="SIGN IN WITH GOOGLE" BackgroundColor="White" TextColor="Red" WidthRequest="250" HorizontalOptions="Center"/>
            <Button x:Name="fbutton" Text="SIGN IN WITH FACEBOOK" BackgroundColor="#3b5998" TextColor="White" WidthRequest="250" HorizontalOptions="Center"/>
        </StackLayout>
  </ContentPage.Content>
</ContentPage>
